{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://identity.foundation/dwn/json-schemas/permissions/scopes.json",
  "type": "object",
  "definitions": {
    "protocols-configure-scope": {
      "type": "object",
      "properties": {
        "interface": {
          "const": "Protocols"
        },
        "method": {
          "const": "Configure"
        }
      }
    },
    "protocols-query-scope": {
      "type": "object",
      "properties": {
        "interface": {
          "const": "Protocols"
        },
        "method": {
          "const": "Query"
        }
      }
    },
    "records-read-scope": {
      "oneOf": [
        {
          "$comment": "RecordsRead grant scope with no restrictions",
          "type": "object",
          "required": [
            "interface",
            "method"
          ],
          "properties": {
            "interface": {
              "const": "Records"
            },
            "method": {
              "const": "Read"
            }
          }
        },
        {
          "$comment": "RecordsRead grant scope with list of allowed recordIds",
          "type": "object",
          "required": [
            "interface",
            "method",
            "recordIds"
          ],
          "properties": {
            "interface": {
              "const": "Records"
            },
            "method": {
              "const": "Read"
            },
            "recordIds": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ]

    },
    "records-write-scope": {
      "type": "object",
      "properties": {
        "interface": {
          "const": "Records"
        },
        "method": {
          "const": "Write"
        }
      }
    }
  }
}
